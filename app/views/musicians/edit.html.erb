<section class="form-container">
  <h1>Update <%= @musician.name %></h1>
    <%= form_for(@musician,url: musician_path) do |f| %>
    <div class="container-gray">
      <div class="input-field">
        <%= f.text_field :name, placeholder: "Name", class: "form-control" %>
      </div>
      <div class="input-field">
        <%= f.text_field :genres, placeholder: "Genres", class: "form-control" %>
      </div>
      <div class="input-field">
        <%= f.text_field :influences, placeholder: "Influences", class: "form-control" %>
      </div>
      <div class="input-field">
        <%= f.text_field :bio, placeholder: "Bio", class: "form-control" %>
      </div>
      <div class="input-field">
        <%= f.text_field :zip_code, placeholder: "Zip Code", class: "form-control" %>
      </div>
       <div class="input-field">
        <%= f.file_field :photo %>
      </div>
      <div class="input-field">
        <%= f.text_field :audio_clip, placeholder: "Audio Clip", class: "form-control" %>
      </div>
      <div class="input-field">
        <%= f.text_field :gear, placeholder: "Gear", class: "form-control" %>
      </div>
      <div class="input-field">
        <%= f.collection_check_boxes( :instrument_ids, Instrument.all, :id, :instrument_name, {:prompt => "Please Select a Sector"}, {:multiple => true}) %>
      </div>
      <%= link_to "Cancel", :back, class: "btn btn-secondary" %>
      <%= f.submit "Save Changes", class: "btn btn-primary" %>
    </div>
  <% end %>
</section>

