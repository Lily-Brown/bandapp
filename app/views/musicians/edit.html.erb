<div class="content-white">

  <section class="profile-action">

    <div class="profile-image">
      <%= image_tag @musician.photo.url(:medium) %>
    </div>



  </section>

  <section class="profile-info">

    <%= form_for(@musician,url: musician_path) do |f| %>
      <p>Change photo: <%= f.file_field :photo, class: 'mp3-button' %></p>
      <h1 class="profile-title"><%= f.text_field :name, placeholder: "Name", class: 'value' %></h1>
      <p><%= f.text_area :genres, placeholder: "Genres", class: 'value' %></p>
      <p><%= f.text_area :influences, placeholder: "Influences", class: 'value' %></p>
      <p><%= f.text_area :bio, placeholder: "Bio", class: 'value' %></p>
      <p><%= f.text_field :zip_code, placeholder: "Zip Code", class: 'value' %></p>
      <p><%= f.text_area :gear, placeholder: "Gear", class: 'value' %></p>
      <p>Upload audio:<br /> <%= f.file_field :mp3, class: 'mp3-button' %></p>

      <p>
        <strong>Instruments: </strong><br />
        <%= f.collection_check_boxes( :instrument_ids, Instrument.all, :id, :instrument_name, {:prompt => "Please Select a Sector"}, {:multiple => true}) %>
      </p>


      <% if current_musician == @musician %>
        <div class="float-fix">
          <div class="cancel-container">
          <p><%= link_to 'Cancel', :back, class: 'button'  %></p>
          </div>
          <div class="save-container">
          <p><%= link_to "Save", "javascript:save_form()", class: 'button' %></p>
          <% end %>
          </div>
        </div>
    <%end%>


  </section>

</div>
