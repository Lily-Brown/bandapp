<%= image_tag @musician.photo(:medium) %>
<div>
  <p><%= link_to 'Add to My Band', edit_band_instrument_musician_path %></p>
</div>
<%= form_for(@musician,url: musician_path) do |f| %>
  <p class='toggle btn_hide'>Change photo: <%= f.file_field :photo %></p>
  <h1><p><%= f.text_field :name, placeholder: "Name", disabled: true, 
            class: 'toggle_text value' %></p></h1>
  <p><%= f.text_area :genres, placeholder: "Genres", disabled: true, 
            class: 'toggle_text_area value' %></p>
  <p><%= f.text_area :influences, placeholder: "Influences", disabled: true, 
            class: 'toggle_text_area value' %></p>
  <p><%= f.text_area :bio, placeholder: "Bio", disabled: true, 
            class: 'toggle_text_area value' %></p>
  <p><%= f.text_field :zip_code, placeholder: "Zip Code", disabled: true, 
            class: 'toggle_text value' %></p>
  <p><%= f.text_field :audio_clip, placeholder: "Audio Clip", disabled: true, 
            class: 'toggle_text value' %></p>
  <p><%= f.text_area :gear, placeholder: "Gear", disabled: true, 
            class: 'toggle_text_area value' %></p>
  <p class='toggle btn_hide'>
    <strong>Instruments: </strong></br>
    <%= f.collection_check_boxes( :instrument_ids, Instrument.all, :id, :instrument_name, {:prompt => "Please Select a Sector"}, {:multiple => true}) %></p>

  <div class='toggle btn_show'>
    <strong>Instruments: </strong>
    <% @musician.instruments.each do |instrument| %>
      <%= link_to instrument.instrument_name, instrument_path(instrument) %>
    <% end %> 
  </div>  
  <div>
    <strong>Bands I own: </strong>
    <% @musician.bands.each do |band| %>
      <%= link_to band.band_name, band_path(band) %>
    <% end %>
  </div>
  <div>
    <strong>Bands I'm in: </strong>
    <% @memberships.each do |membership| %>
      <%= link_to membership.band.band_name, band_path(membership.band) %> - <%= membership.instrument.instrument_name %>
    <% end %>
  </div>

<% if current_musician == @musician %>
  <p><%= link_to 'Create Band', new_band_path %></p>
  <p><%= link_to 'Edit', "javascript:toggle_fields()", class: 'toggle edit btn_show' %></p>
  <p><%= link_to "Cancel", "javascript:toggle_fields()", class: 'toggle btn_hide' %></p>
  <p><%= f.submit "Save Changes", class: 'toggle save btn_hide' %></p>
  <p><%= link_to 'Delete', musician_path, method: :delete, data: { confirm: 'Are you sure you want to delete this Musician?' } %></p>
  <% end %>
<%end%>
