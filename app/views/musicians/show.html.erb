<div>
  <%= image_tag @musician.photo(:medium) %>
  <h1><%= @musician.name %></h1>
  <p><%= @musician.genres %></p>
  <p><%= @musician.influences %></p>
  <p><%= @musician.bio %></p>
  <p><%= @musician.zip_code %></p>
  <p><%= @musician.gear %></p>
  <audio controls>
    <source src="<%= @musician.mp3 %>" type="audio/mpeg">
  </audio>
</div>

<div>
  <strong>Instruments: </strong>
  <% @musician.instruments.each do |instrument| %>
    <%= link_to instrument.instrument_name, instrument_path(instrument) %>
  <% end %>
</div>
<div>
  <strong>Bands I own: </strong>
  <% @musician.bands.each do |band| %>
    <%= link_to band.band_name, band_path(band) %>
  <% end %>
</div>
<div>
  <strong>Bands I'm in: </strong>
  <% @memberships.each do |membership| %>
    <%= link_to membership.band.band_name, band_path(membership.band) %> - <%= membership.instrument.instrument_name %>
  <% end %>
</div>
<div>
  <p><%= link_to 'Add to My Band', edit_band_instrument_musician_path %></p>
</div>
<% if current_musician == @musician %>
  <div>
    <p><%= link_to 'Create Band', new_band_path %></p>
    <p><%= link_to 'Edit', edit_musician_path %></p>
    <p><%= link_to 'Delete', musician_path, method: :delete, data: { confirm: 'Are you sure you want to delete this Musician?' } %></p>
  </div>
<%end%>
