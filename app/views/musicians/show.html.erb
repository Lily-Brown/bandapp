<div class='toggle'>
  <%= image_tag @musician.photo(:medium) %>
  <%= form_for(@musician,url: musician_path) do |f| %>
    <h1><p><%= f.text_field :name, disabled: true, class: 'toggle_text' %></p></h1>
    <p><%= f.text_area :genres, disabled: true, class: 'toggle_text_area' %></p>
    <p><%= f.text_area :influences, disabled: true, class: 'toggle_text_area' %></p>
    <p><%= f.text_area :bio, disabled: true, class: 'toggle_text_area' %></p>
    <p><%= f.text_field :zip_code, disabled: true, class: 'toggle_text' %></p>
    <p><%= f.text_field :audio_clip, disabled: true, class: 'toggle_text' %></p>
    <p><%= f.text_area :gear, disabled: true, class: 'toggle_text_area' %></p>
  <% end %>
</div>

<div>
  <strong>Instruments: </strong>
  <% @musician.instruments.each do |instrument| %>
    <%= link_to instrument.instrument_name, instrument_path(instrument) %>
  <% end %> 
</div>

<div>
  <strong>Bands I own: </strong>
  <% @musician.bands.each do |band| %>
    <%= link_to band.band_name, band_path(band) %>
  <% end %>
</div>
<div>
  <strong>Bands I'm in: </strong>
  <% @memberships.each do |membership| %>
    <%= link_to membership.band.band_name, band_path(membership.band) %> - <%= membership.instrument.instrument_name %>
  <% end %>
</div>
<div>
  <p><%= link_to 'Add to My Band', edit_band_instrument_musician_path %></p>
</div>
<% if current_musician == @musician %>
  <div class='toggle'>
    <p><%= link_to 'Create Band', new_band_path %></p>
    <p><%= link_to 'Edit', '#', class: 'toggle_edit btn_show' %></p>
    <p><%= link_to 'Save', '#', class: 'toggle_save btn_hide' %></p>
    <p><%= link_to 'Delete', musician_path, method: :delete, data: { confirm: 'Are you sure you want to delete this Musician?' } %></p>
  </div>
<%end%>
