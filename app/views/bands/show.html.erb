<%= image_tag @band.photo(:medium) %>

<div>
  <p><a href="mailto:<%= @band.musician.email %>">Send Message</a></p>
</div>

<div>
  <%= form_for(@band,url: band_path) do |f| %>
  <p class='toggle btn_hide'>Change photo: <%= f.file_field :photo %></p>
  <h1><p><%= f.text_field :band_name, placeholder: "Band Name", disabled: true,
            class: 'toggle_text value' %></p></h1>
  <p><%= f.text_area :genres, placeholder: "Genres", disabled: true,
            class: 'toggle_text_area value' %></p>
  <p><%= f.text_area :influences, placeholder: "Influences", disabled: true,
            class: 'toggle_text_area value' %></p>
  <p><%= f.text_area :bio, placeholder: "Bio", disabled: true,
            class: 'toggle_text_area value' %></p>
  <p><%= f.text_field :zip_code, placeholder: "Zip Code", disabled: true,
            class: 'toggle_text value' %></p>
  <p><%= f.text_area :gear, placeholder: "Gear", disabled: true,
            class: 'toggle_text_area value' %></p>
  <p class='toggle btn_hide'>Change audio: <%= f.file_field :mp3 %></p>
      <div class ='toggle btn_show'>
      <% if @band.mp3? %>
        <audio controls>
          <source src="<%= @band.mp3 %>" type="audio/mpeg">
        </audio>
      <% else %>
        <p>Mp3 audio has not been uploaded.</p>
      <% end %>
    </div>
</div>

<% if current_musician == @band.musician %>
<div>
  <p><%= link_to 'Add Opening', new_band_instrument_musician_path %> </p>
  <p><%= link_to 'Edit', "javascript:toggle_fields()", class: 'toggle edit btn_show' %></p>
  <p><%= link_to "Cancel", "javascript:toggle_fields()", class: 'toggle btn_hide' %></p>
  <p><%= f.submit "Save Changes", class: 'toggle save btn_hide' %></p>
  <p><%= link_to 'Delete', band_path, method: :delete, data: { confirm: 'Are you sure you want to delete this band?' } %></p>
</div>
  <% end %>
<% end %>


<div>
  <h3>Members:</h3>
  <% @members.each do |m| %>
    <p>
      <%= m.musician.name %> - <%= m.instrument.instrument_name %>
      <% if current_musician == @band.musician %>
        <%= button_to 'peace', band_instrument_musician_path, params:{member_id: m.id}, method: :delete %>
      <% end %>
    </p>
  <% end %>
</div>

<div>
  <h3>Openings:</h3>
  <% @openings.each do |o| %>
    <p>
      <%= o.instrument.instrument_name %> Player
      <% if current_musician == @band.musician %>
        <%= button_to 'remove opening', band_instrument_musician_path, params:{member_id: o.id}, method: :delete %>
      <% end %>
    </p>
  <% end %>
</div>

