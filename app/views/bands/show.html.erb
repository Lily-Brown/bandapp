<div>
  <p><%= @band.band_name %></p>
  <p><%= @band.genres %></p>
  <p><%= @band.influences %></p>
  <p><%= @band.bio %></p>
  <p><%= @band.zip_code %></p>
  <p><%= @band.image %></p>
  <p><%= @band.audio_clip %></p>
  <p><%= @band.gear %></p>
</div>

<div>
  <% @members.each do |m| %>
    <p><%= m.musician.name %> - <%= m.instrument.instrument_name %></p>
  <% end %>
</div>

<% if current_musician == @band.musician %>
<div>
  <p><%= link_to 'Edit', edit_band_path %></p>
  <p><%= link_to 'Delete', band_path, method: :delete, data: { confirm: 'Are you sure you want to delete this band?' } %></p>
</div>
<% end %>
